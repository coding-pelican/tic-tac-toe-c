{
  "version": "2.0.0",
  "runner": "terminal",
  "echoCommand": true,
  "presentation": {
    "reveal": "always"
  },
  "inputs": [
    {
      "id": "userArgs",
      "type": "promptString",
      "description": "Enter program arguments:"
    }
  ],
  "tasks": [
    { // backup settings
      "label": "backup settings",
      "type": "shell",
      "command": "python ${workspaceFolder}/.vscode/backup_settings.py"
    },
    { // merge settings
      "label": "merge settings",
      "type": "shell",
      "command": "python ${workspaceFolder}/.vscode/merge_settings.py ${fileDirname}"
    },
    { // restore settings
      "label": "restore settings",
      "type": "shell",
      "command": "python ${workspaceFolder}/.vscode/restore_settings.py",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // build multi-file with clang
      "label": "build multi-file with clang",
      "type": "shell",
      "command": "clang",
      "windows": {
        "args": [
          "-std=c17",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${config:tasks.C_ARGS_BASE}",
          "-o",
          "${fileDirname}\\${fileDirnameBasename}.exe",
          "${config:tasks.C_ARGS}"
        ],
        "options": {
          "cwd": "C:\\dasae-storage\\dev\\tools\\msys64\\ucrt64\\bin"
        }
      },
      "linux": {
        "args": [
          "-std=c17",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${config:tasks.C_ARGS_BASE}",
          "-o",
          "${fileDirname}/${fileDirnameBasename}",
          "${config:tasks.C_ARGS}"
        ],
        "options": {
          "cwd": "/usr/bin"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // build multi-file with clang++
      "label": "build multi-file with clang++",
      "type": "shell",
      "command": "clang++",
      "windows": {
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${config:tasks.CPP_ARGS_BASE}",
          "-o",
          "${fileDirname}\\${fileDirnameBasename}.exe",
          "${config:tasks.CPP_ARGS}"
        ],
        "options": {
          "cwd": "C:\\dasae-storage\\dev\\tools\\msys64\\ucrt64\\bin"
        }
      },
      "linux": {
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${config:tasks.CPP_ARGS_BASE}",
          "-o",
          "${fileDirname}/${fileDirnameBasename}",
          "${config:tasks.CPP_ARGS}"
        ],
        "options": {
          "cwd": "/usr/bin"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // clang build active file for C
      "label": "clang build active file for C",
      "type": "shell",
      "command": "clang",
      "windows": {
        "args": [
          "-std=c17",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "C:\\dasae-storage\\dev\\tools\\msys64\\ucrt64\\bin"
        },
        "detail": "컴파일러: C:/dasae-storage/dev/tools/msys64/ucrt64/bin/clang.exe"
      },
      "linux": {
        "args": [
          "-std=c17",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "detail": "compiler: /usr/bin/clang"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // clang++ build active file for C++
      "label": "clang++ build active file for C++",
      "type": "shell",
      "command": "clang++",
      "windows": {
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "C:\\dasae-storage\\dev\\tools\\msys64\\ucrt64\\bin"
        },
        "detail": "컴파일러: C:/dasae-storage/dev/tools/msys64/ucrt64/bin/clang++.exe"
      },
      "linux": {
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "detail": "compiler: /usr/bin/clang++"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // clang build multi-file for C
      "label": "clang build multi-file for C",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "restore settings",
        "backup settings",
        "merge settings",
        "build multi-file with clang",
        "restore settings"
      ],
      "windows": {
        "detail": "컴파일러: C:/dasae-storage/dev/tools/msys64/ucrt64/bin/clang.exe"
      },
      "linux": {
        "detail": "compiler: /usr/bin/clang"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // clang++ build multi-file for C++
      "label": "clang++ build multi-file for C++",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "restore settings",
        "backup settings",
        "merge settings",
        "build multi-file with clang++",
        "restore settings"
      ],
      "windows": {
        "detail": "컴파일러: C:/dasae-storage/dev/tools/msys64/ucrt64/bin/clang++.exe"
      },
      "linux": {
        "detail": "compiler: /usr/bin/clang++"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    { // execute built active file
      "label": "execute built active file",
      "type": "shell",
      "options": {
        "cwd": "${fileDirname}"
      },
      "windows": {
        "command": "cmd.exe",
        "args": [
          "/C", // "Carry out the command specified by string and then terminate"
          "${fileBasenameNoExtension} ${input:userArgs}",
          "&&",
          "del /f ${fileBasenameNoExtension}.exe"
        ]
      },
      "linux": {
        "command": "${fileBasenameNoExtension} ${input:userArgs}",
        "args": [
          "&&",
          "rm /f ${fileBasenameNoExtension}"
        ]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    { // execute built multi-file
      "label": "execute built multi-file",
      "type": "shell",
      "options": {
        "cwd": "${fileDirname}",
      },
      "windows": {
        "command": "cmd.exe",
        "args": [
          "/C", // "Carry out the command specified by string and then terminate"
          "${fileDirnameBasename} ${input:userArgs}",
          "&&",
          "del /f ${fileDirnameBasename}.exe"
        ]
      },
      "linux": {
        "command": "${fileDirnameBasename} ${input:userArgs}",
        "args": [
          "&&",
          "rm /f ${fileDirnameBasename}"
        ]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
